<h1> Edit your profile</h1>

<form class="form" action="/user/{{user._id}}/edit" method="post">

    <label for="firstname">Firstname</label>
    <input type="text" id="firstname" name="firstname" value="{{user.firstname}}">

    <label for="lastname">Lastname</label>
    <input type="text" id="lastname" name="lastname" value="{{user.lastname}}">

    <label for="email">Email</label>
    <input type="text" id="email" name="email" value="{{user.email}}">

    {{#if isAdmin}}
    <p>Is admin?</p>
    <label for="role">No</label>
    <input name="role" type="radio" value="user" {{isSameValue user.role "user"}}>

    <label for="role">Yes</label>
    <input name="role" type="radio" value="admin" {{isSameValue user.role "admin"}}>

