<h2 class="form-title">+ add a new log</h2>

<div class="form-item">
    <label class="form-label" for="date">Date</label>
    <input class="form-input" type="date" id="date" name="date" required>
</div>

<div class="form-item">
    <label class="form-label" for="brew-time">Brew time</label>
    <input class="form-input" type="number" id="brew-time" placeholder="in seconds" name="brewTime" required>
</div>

<div class="form-item">
    <label class="form-label" for="brew-method">Brew method</label>
    <select class="form-input" name="brewMethod" id="brew-method" required>
        {{#each techniques}}
        <option value="{{this._id}}">{{this.name}}</option>
        {{/each}}
    </select>
</div>

<div class="form-item">
    <label class="form-label" for="coffee">Coffee</label>
    <select class="form-input" name="coffee" id="coffee" required>
        {{#each coffees}}
        <option value="{{this._id}}">{{this.name}}</option>
        {{/each}}
    </select>
</div>

<div class="btn-new-coffee-container">
    <a class="btn red-background" id="add-new-coffee-btn">add a coffee</a>
</div>
{{!-- fake btn to toggle hidden class on "add a new coffee" div --}}
<div class="form-item">
    <label class="form-label" for="coffee-qty">Ground coffee</label>
    <input class="form-input" type="number" id="coffee-qty" placeholder="gr" name="coffeeQty" required>
</div>

<div class="form-item">
    <label class="form-label" for="water-qty">Water</label>
    <input class="form-input" type="number" id="water-qty" placeholder="gr" name="waterQty" required>
</div>


<div class="form-radio-item">
    <h3 class="form-radio-title">Grind size:</h3>

    <div>
        <input type="radio" id="grind-size-1" name="grindSize" value="coarse" checked required>
        <label for="grind-size">Coarse</label>
    </div>

    <div>
        <input type="radio" id="grind-size-2" name="grindSize" value="medium">
        <label for="grind-size">Medium</label>
    </div>

    <div>
        <input type="radio" id="grind-size-3" name="grindSize" value="fine">
        <label for="grind-size">Fine</label>
    </div>

    <div>
        <input type="radio" id="grind-size-4" name="grindSize" value="extra fine">
        <label for="grind-size">Extra fine</label>
    </div>

    <div>
        <input type="radio" id="grind-size-5" name="grindSize" value="turkish">
        <label for="grind-size">Turkish</label>
    </div>
</div>

<a class="btn red-border form-btn" id="new-log-next-btn">Next</a>
{{!-- a fake btn that toggles hidden class for next form page --}}