<div class="card">
    <div class="title-delete-container">
        <h2>{{this.name}} <i class="fas fa-seedling"></i></h2>
        <div>

            <a class="btn red-border" href="/coffee/{{this._id}}/edit"><i class="fas fa-edit"></i> edit</a>

            <a class="btn red-background" href="/coffee/{{this._id}}/delete"><i class="fas fa-trash"></i></a>

        </div>
    </div>
    <h3><i class="fas fa-map-marker-alt"></i> {{this.country}}, {{this.region}} ({{this.altitude}}m)</h3>
    <h4><span>Drying method:</span> {{this.dryingMethod}}</h4>
    <h4> <span>Roast:</span> {{this.roast}}</h4>
    <h4> <span>Flavor profile:</span> {{this.flavorProfile}}</h4>
</div>